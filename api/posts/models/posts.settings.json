{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Posts"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "content": {
      "type": "text"
    },
    "author": {
      "type": "string"
    },
    "dislikes": {
      "collection": "dislikes",
      "via": "post"
    },
    "likes": {
      "collection": "likes",
      "via": "post"
    },
    "comments": {
      "collection": "comments",
      "via": "post"
    },
    "audio": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
