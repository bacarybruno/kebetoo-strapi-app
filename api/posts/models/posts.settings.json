{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "posts"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "content": {
      "type": "text"
    },
    "author": {
      "type": "string"
    },
    "comments": {
      "collection": "comments",
      "via": "post"
    },
    "audio": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files"
      ],
      "plugin": "upload",
      "required": false
    },
    "reactions": {
      "collection": "reactions",
      "via": "post"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
