{
  "routes": [
    {
      "method": "GET",
      "path": "/stories",
      "handler": "stories.find",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/stories/count",
      "handler": "stories.count",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/stories/:id",
      "handler": "stories.findOne",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/stories",
      "handler": "stories.create",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/stories/:id",
      "handler": "stories.update",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/stories/:id",
      "handler": "stories.delete",
      "config": {
        "policies": ["global::is-authenticated"]
      }
    }
  ]
}
