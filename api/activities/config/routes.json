{
  "routes": [
    {
      "method": "GET",
      "path": "/activities/:uid",
      "handler": "activities.findByUid",
      "config": {
       "policies": ["global::is-authenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/activities/:uid/count",
      "handler": "activities.count",
      "config": {
       "policies": ["global::is-authenticated"]
      }
    }
  ]
}
